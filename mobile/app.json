{
  "expo": {
    "name": "LewReviews",
    "slug": "lewreviews",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "lewreviews",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.lewreviews.app",
      "infoPlist": {
        "NSCameraUsageDescription": "LewReviews needs camera access to record video reviews.",
        "NSMicrophoneUsageDescription": "LewReviews needs microphone access to record audio for your video reviews.",
        "NSPhotoLibraryUsageDescription": "LewReviews needs photo library access to select videos for upload."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.lewreviews.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow LewReviews to access your photos.",
          "savePhotosPermission": "Allow LewReviews to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-asset",
      "expo-font",
      "expo-video",
      [
        "@sentry/react-native/expo",
        {
          "organization": "YOUR_SENTRY_ORG",
          "project": "lewreviews"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
